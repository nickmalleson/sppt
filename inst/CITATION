citHeader("To cite package 'sppt' in publications use:")

citEntry(entry = "Manual",
  title        = "{sppt}: Spatial Point Pattern Test",
  author       = personList(as.person("Wouter Steenbeek"),
                   as.person("Christophe Vandeviver"),
                   as.person("Martin Andresen"),
                   as.person("Nicolas Malleson")),
  year         = "2017",
  note         = "R package version 0.1.3",
  url          = "https://github.com/sppt/sppt/",

  textVersion  =
  paste("Wouter Steenbeek, Christophe Vandeviver,
         Martin Andresen, Nicolas Malleson (2017).",
        "sppt: Spatial Point Pattern Test.",
        "R package version 0.1.3.",
        "URL: https://github.com/sppt/sppt/")
)
